{
  "manifest_version": 3,
  "name": "Natural WebReader",
  "version": "1.0",
  "description": "Reads selected text aloud using natural voices.",
  "permissions": ["tts", "scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",

    "icons": {
          "16": "icons/icon16.png",
          "32": "icons/icon32.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
        }
        
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
